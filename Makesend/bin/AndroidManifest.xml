<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Makesend.makesend"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.Makesend.makesend.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.Makesend.makesend.Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.Makesend.makesend.Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.Makesend.makesend.Optional"
            android:label="@string/title_activity_optional" >
        </activity>
        <activity
            android:name="com.Makesend.makesend.Discuss"
            android:label="@string/title_activity_discuss" >
        </activity>
    </application>

</manifest>
